<div class="row body-content">
    @Html.Partial("_IMSAdminNavPanel")
    <div class="col-sm-9 col-md-10">
        <h3>All Staff</h3>
        <hr />
        @Html.ActionLink("Add Staff User", "Add", new { }, new { @class="btn btn-outline-success" })
        <hr />
        <table class="table table-striped" id="staff">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>User ID</th>
                    <th>Edit User</th>
                    <th>Delete User</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#staff").DataTable({
                ajax: {
                    url: "/api/users/staff/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "username",
                        render: function (data) {
                            return data;
                        }
                    },
                    {
                        data: "email",
                        render: function (data) {
                            return data;
                        }
                    },
                    {
                        data: "role",
                        render: function (data) {
                            return data;
                        }
                    },
                    {
                        data: "userId",
                        render: function (data) {
                            return data;
                        }
                    },
                    {
                        data: "userId",
                        render: function (data) {
                            return "Edit";
                        }
                    },
                    {
                        data: "userId",
                        render: function (data) {
                            return "<button class='btn btn-outline-danger btn-sm js-delete' data-user-id='" + data + "'>Delete</button>";
                        }
                    },
                ]
            });

            $("#staff").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this user?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/users/" + button.attr("data-user-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw()
                            }
                        });
                    }
                });
            });

        });
    </script>
}