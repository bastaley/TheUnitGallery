@model TheUnitGallery.Areas.IMS.ViewModels.AddressFormViewModel

<div class="row body-content">
    @Html.Partial("_IMSAdminNavPanel")
    <div class="col-sm-9 col-md-10">
        <div class="row">
            <div class="col-sm-12">
                <h3>@Model.Title</h3>
                <hr />
            </div>
        </div>
        @using (Html.BeginForm("Save", "Addresses"))
        {
            @Html.ValidationSummary()
            <div class="row">

                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.Name)
                        @Html.TextBoxFor(m => m.Address.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.AddressLine1)
                        @Html.TextBoxFor(m => m.Address.AddressLine1, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.AddressLine2)
                        @Html.TextBoxFor(m => m.Address.AddressLine2, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.AddressLine3)
                        @Html.TextBoxFor(m => m.Address.AddressLine3, new { @class = "form-control" })
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.City)
                        @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.County)
                        @Html.TextBoxFor(m => m.Address.County, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.PostCode)
                        @Html.TextBoxFor(m => m.Address.PostCode, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.Country)
                        @Html.TextBoxFor(m => m.Address.Country, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.CustomerId)
                        @Html.HiddenFor(m => m.Address.Id)
                        @Html.AntiForgeryToken()
                    </div>
                </div>
            </div>
        }
    </div>
</div>
