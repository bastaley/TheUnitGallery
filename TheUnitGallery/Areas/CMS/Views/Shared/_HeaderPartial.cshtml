<header class="row content fluid">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 order-lg-4 inverse logo"><a href="@Url.Action("index", "home", new { area = "" })"><h1>The Unit</h1></a></div>
    <div class="col-xs-12 col-sm-6 col-md-6 pull-lg-3 col-lg-3 order-lg-3 tel"><a href="tel:01234 567 890">01234 567 890</a></div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 order-lg-1" id="account-btn">
        <i class="fas fa-bars"></i>
        @if (User.Identity.IsAuthenticated)
        {
            @Html.Raw("Manage Account");
        }
        else
        {
            @Html.Raw("Register / Login");
        }
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 order-lg-2" id="search-btn">
        <i class="fas fa-search"></i> Search
    </div>

    @Html.Partial("_AccountDropdownPartial")

    @Html.Partial("_SearchBarDropdownPartial")
</header>
